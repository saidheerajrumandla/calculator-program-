a=int(input("enter the first value:"))
b=int(input ("enter the second value:"))
print("please select one of the option")
option=input("enter option [+,-,*,/]:")
def add(a,b):
    return a+b
def sub(a,b):
    return a-b
def mul(a,b):
    return a*b
def div(a,b):
    return a/b
def recfun():
  option=input ("please enter valid option[+,-,*,/]:")
  if option=="+":
           print("The addition of two values are",add(a,b))
  elif option=="-":
     print ("The substraction of two values are",sub(a,b))
  elif option=="*" :
     print ("The multiplication of two values are",mul(a,b))
  elif option=="/" :
     print("The division of two value are",div(a,b))
  else : 
    print("try again")
    recfun()#this function call executes if option chosen incorrectly

recfun()#this function call is to start the selection of options
